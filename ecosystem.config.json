{
  "apps": [
    {
      "name": "barbearia-backend",
      "script": "server.js",
      "instances": 1,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3001
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 3001
      },
      "log_file": "./logs/combined.log",
      "out_file": "./logs/out.log",
      "error_file": "./logs/error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "max_memory_restart": "300M",
      "restart_delay": 5000,
      "max_restarts": 10,
      "min_uptime": "10s",
      "kill_timeout": 5000,
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs",
        ".git"
      ]
    }
  ]
}
